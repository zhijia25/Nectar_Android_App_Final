<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.jianqingc.nectar.fragment.Compute_Fragment.ImageDetailFragment">

        <LinearLayout
            android:id="@+id/resourceTypesDetail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            android:weightSum="1">

            <TextView
                android:id="@+id/resourceTypesNameID1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="20sp"
                android:layout_weight="0.3"
                android:text="Resource Type Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resourceTypesNameID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_weight="0.7"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="true" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/resourceTypesDetail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resourceTypesDetail1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            android:weightSum="1">

            <TextView
                android:id="@+id/resourceTypesAttributeID1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="20sp"
                android:layout_weight="0.3"
                android:text="Attribute"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resourceTypesAttributeID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_weight="0.7"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/resourceTypesDetail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resourceTypesDetail2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            android:weightSum="1">

            <TextView
                android:id="@+id/resourceTypesPropertieID1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="20sp"
                android:layout_weight="0.3"
                android:text="Properties"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resourceTypesPropertiesID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_weight="0.7"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>