<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/alarmLI1"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

    <TextView

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@+string/alarmNameLI1"
        android:id="@+id/alarmNameLI1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_weight="0.3"/>
    <TextView

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text ="Medium Text"
        android:id="@+id/alarmNameLI"
        android:layout_marginTop="10sp"
        android:layout_width="0dp"
        android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/alarmLI1"
        android:id="@+id/alarmLI2"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceSmall"
            android:text="metric"
            android:id="@+id/alarmMetricLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/alarmMetricLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/alarmLI2"
        android:id="@+id/alarmLI3"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text = "aggregation_method"
            android:id="@+id/alarmMethodLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            />
        
        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/alarmMethodLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/alarmLI3"
        android:id="@+id/alarmLI4"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Threshold"
            android:id="@+id/alarmThresholdLI1"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/alarmThresholdLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/alarmLI4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
