<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/createaConfigGroupButton"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jianqingc.nectar.fragment.Alarm_Fragment.CreateAlarmFragment">

            <TextView
                android:id="@+id/newConfigGroupName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Name*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newConfigGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newConfigGroupName1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:hint="network address"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ConfigGroupDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newConfigGroupName"
                android:layout_alignStart="@+id/newConfigGroupName"
                android:layout_below="@+id/newConfigGroupName"
                android:layout_marginTop="25sp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ConfigGroupDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ConfigGroupDescription1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:hint="Description"
                android:singleLine="true"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ConfigGroupDatastore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ConfigGroupDescription"
                android:layout_alignStart="@+id/ConfigGroupDescription"
                android:layout_below="@+id/ConfigGroupDescription"
                android:layout_marginTop="25sp"
                android:text="Datastore*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/ConfigGroupDatastore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ConfigGroupDatastore1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp" />

        </RelativeLayout>
        <requestFocus />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ConfigGroupbuttonbuttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/createaConfigGroupButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="60sp"
            android:layout_weight="0.99"
            android:background="#ffcc00"
            android:text="Create Configuration Group"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>