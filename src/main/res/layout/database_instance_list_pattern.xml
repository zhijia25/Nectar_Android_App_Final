<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/databaseInstancesLI1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseInstancesNameLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/databaseInstancesLI1"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.3"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/databaseInstancesNameLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.7"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseInstancesLI2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseInstancesLI1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseInstancesDatastoreLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Datastore Type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/databaseInstancesDatastoreLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseInstancesLI3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseInstancesLI2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseInstancesVersionLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Version"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseInstancesVersionLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseInstancesLI4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseInstancesLI3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseInstancesVolumeLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Volume"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseInstancesVolumeLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/databaseInstancesLl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/databaseInstancesLI4"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/databaseInstancesStatusLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/databaseInstancesStatusLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/databaseInstancesLl5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
