<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/buttonbuttom3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jianqingc.nectar.fragment.Volume_Fragment.CreateVolumeFragment">

            <TextView
                android:id="@+id/newNameCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Volume Name*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newNameCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newNameCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp">

                <requestFocus />
            </EditText>


            <TextView
                android:id="@+id/newDescriptionCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newNameCV1"
                android:layout_alignStart="@+id/newNameCV1"
                android:layout_below="@+id/newNameCV"
                android:layout_marginTop="25sp"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newDescriptionCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newDescriptionCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/sourceCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newNameCV1"
                android:layout_alignStart="@+id/newNameCV1"
                android:layout_below="@+id/newDescriptionCV"
                android:layout_marginTop="25sp"
                android:text="Volume Source*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sourceCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sourceCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="No source, empty volume"
                android:textSize="14sp"
                android:enabled="false"
                />



            <TextView
                android:id="@+id/typeCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newNameCV1"
                android:layout_alignStart="@+id/newNameCV1"
                android:layout_below="@+id/sourceCV"
                android:layout_marginTop="25sp"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/typeCV"
                android:layout_below="@+id/typeCV1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:enabled="false"
                 />


            <TextView
                android:id="@+id/newSizeCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newNameCV1"
                android:layout_alignStart="@+id/newNameCV1"
                android:layout_below="@+id/typeCV"
                android:layout_marginTop="25sp"
                android:text="Size (GB)*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newSizeCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newSizeCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />



            <TextView
                android:id="@+id/newAvailabilityCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newNameCV1"
                android:layout_alignStart="@+id/newNameCV1"
                android:layout_below="@+id/newSizeCV"
                android:layout_marginTop="25sp"
                android:text="Availibility Zone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newAvailabilityCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newAvailabilityCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />






        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/buttonbuttom3"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/createVCV"
            android:layout_width="0dp"
            android:layout_weight="0.99"
            android:layout_height="wrap_content"
            android:text="Create    Volume"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60sp"
            android:background="#ffcc00"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>


</RelativeLayout>