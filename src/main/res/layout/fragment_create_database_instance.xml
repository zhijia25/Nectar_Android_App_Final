<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/buttonbuttom3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jianqingc.nectar.fragment.Volume_Fragment.CreateVolumeFragment">

            <TextView
                android:id="@+id/newDatabaseInstanceNameCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Instance Name*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/newDatabaseInstanceNameCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newDatabaseInstanceNameCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp">

                <requestFocus />
            </EditText>


            <TextView
                android:id="@+id/newVolumeSizeCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newDatabaseInstanceNameCV1"
                android:layout_alignStart="@+id/newDatabaseInstanceNameCV1"
                android:layout_below="@+id/newDatabaseInstanceNameCV"
                android:layout_marginTop="25sp"
                android:text="Volume SIze*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newVolumeSizeCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newVolumeSizeCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/datastoreCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newVolumeSizeCV1"
                android:layout_alignStart="@+id/newVolumeSizeCV1"
                android:layout_below="@+id/newVolumeSizeCV"
                android:layout_marginTop="25sp"
                android:text="Datastore*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datastoreCV"
                android:layout_below="@+id/datastoreCV1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:enabled="false"
                />


            <TextView
                android:id="@+id/localityCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newDatabaseInstanceNameCV1"
                android:layout_alignStart="@+id/newDatabaseInstanceNameCV1"
                android:layout_below="@+id/datastoreCV"
                android:layout_marginTop="25sp"
                android:text="Locality"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/localityCV"
                android:layout_below="@+id/localityCV1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:enabled="false"
                 />


            <TextView
                android:id="@+id/newDatabaseInstanceAvailabilityCV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newDatabaseInstanceNameCV1"
                android:layout_alignStart="@+id/newDatabaseInstanceNameCV1"
                android:layout_below="@+id/localityCV"
                android:layout_marginTop="25sp"
                android:text="Availibility Zone*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newDatabaseInstanceAvailabilityCV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/newDatabaseInstanceAvailabilityCV1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />






        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/buttonbuttom3"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/createDatabaseInstanceVCV"
            android:layout_width="0dp"
            android:layout_weight="0.99"
            android:layout_height="wrap_content"
            android:text="Create Instance"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60sp"
            android:background="#ffcc00"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>


</RelativeLayout>