<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/configrationGroupLI1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/configrationGroupNameLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/configrationGroupLI1"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.3"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/configrationGroupNameLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.7"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/configrationGroupLI2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configrationGroupLI1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/configrationGroupDatastoreLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Datastore Type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/configrationGroupDatastoreLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/configrationGroupLI3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configrationGroupLI2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/configrationGroupVersionLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Version"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/configrationGroupVersionLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/configrationGroupLI4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/configrationGroupLI3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView

            android:id="@+id/configrationGroupDescriptionLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/configrationGroupDescriptionLI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.7"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/configrationGroupLl5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
