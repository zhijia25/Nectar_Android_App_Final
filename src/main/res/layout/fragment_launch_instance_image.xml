<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
         android:layout_height="fill_parent"

    >



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jianqingc.nectar.fragment.Compute_Fragment.LaunchInstanceImageFragment">

            <TextView
                android:id="@+id/newInsName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Instance Name*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newInsName"
                android:layout_below="@+id/newInsName1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:hint="Instance Name"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:singleLine="true" />
            <requestFocus />

            <TextView
                android:id="@+id/flavor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/newInsName"
                android:layout_marginTop="25sp"
                android:text="Flavor*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flavor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/flavor1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/insCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/flavor"
                android:layout_marginTop="25sp"
                android:text="Instance Count"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insCount"
                android:layout_below="@+id/insCount1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:hint="1"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:enabled="false"
                android:singleLine="true" />

            <TextView
                android:id="@+id/insBootS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/insCount"
                android:layout_marginTop="25sp"
                android:text="Instance Boot Source*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insBootS"
                android:layout_below="@+id/insBootS1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10sp"
                android:hint="Boot From Image"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:enabled="false"
                android:singleLine="true" />

            <TextView
                android:id="@+id/imageNameNI1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/insBootS"
                android:layout_marginTop="25sp"
                android:text="Image Name*"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageNameNI"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageNameNI1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/keyPairNI1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/imageNameNI"
                android:layout_marginTop="25sp"
                android:text="Key Pair"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyPairNI"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/keyPairNI1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/securityGroupNI1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/keyPairNI"
                android:layout_marginTop="25sp"
                android:text="Security Groups"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:footerDividersEnabled="true"
                android:id="@+id/securityGroupNI"
                android:layout_below="@+id/securityGroupNI1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10sp"
                android:choiceMode="multipleChoice"/>

            <TextView
                android:id="@+id/availabilityZoneNI1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/newInsName"
                android:layout_alignStart="@+id/newInsName"
                android:layout_below="@+id/securityGroupNI"
                android:layout_marginTop="25sp"
                android:text="Availability Zone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/availabilityZoneNI"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/availabilityZoneNI1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@+id/availabilityZoneNI"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100sp"
                android:id="@+id/viewNI" />




        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/buttonbuttom"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        >

        <Button
            android:id="@+id/createNI"
            android:layout_width="0dp"
            android:layout_weight="0.99"
            android:layout_height="wrap_content"
            android:text="Create Instance"
            android:layout_marginLeft="60sp"
            android:layout_gravity="bottom|end"
            android:background="#ffcc00"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>
</RelativeLayout>