<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/PortLI1"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/PortNameLI1"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text ="Medium Text"
            android:id="@+id/PortNameLI"
            android:layout_marginTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/PortLI1"
        android:id="@+id/PortLI2"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:id="@+id/PortMacAddressLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="MAC Address"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />
        <TextView

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/PortMacAddressLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/PortLI2"
        android:id="@+id/PortLI3"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:id="@+id/PortStatusLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/PortStatusLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/PortLI3"
        android:id="@+id/PortLI4"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView

            android:id="@+id/PortAdminStateLI1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.3"
            android:text="Admin State"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/PortAdminStateLI"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"  />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/PortLI4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
